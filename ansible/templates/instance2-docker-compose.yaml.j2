version: '3'
services:
  backend:
    container_name: backend
    build: {{remote_working_directory}}/backend
    ports:
      - "8080:8080"
    volumes:
      - {{remote_working_directory}}/backend:/code
    restart: always
  spider:
    container_name: spider
    build: {{remote_working_directory}}/scraper/Streamer
    volumes:
      - {{remote_working_directory}}/scraper/Streamer:/workspace
    restart: always